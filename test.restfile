variables:
    base_url: http://localhost:8080

requests:

    hello:
        url: ${base_url}/hello
        validation:
            status: 200
        log: true
        
    hello-param:
        url: ${base_url}/hello?name=foo
        validation:
            status: 200
        log: true

    create-package:
        url: ${base_url}/packages/
        method: POST
        body:
            json:
                url: https://github.com/finestructure/Arena
                lastCommitAt: "2020-04-24T13:03:09Z"
        validation:
            status: 200

    all-packages:
        url: ${base_url}/packages
        validation:
            status: 200
        log: json

    get-package:
        url: ${base_url}/packages/${all-packages[0].id}
        validation:
            status: 200
        log: json